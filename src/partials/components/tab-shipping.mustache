<div class="tab-shipping ui tab" data-tab="shipping-tab">
  <div class="b-checkout px-0">
    <div class="b-checkout__title">
      <h3>Shipping Options</h3>
      <h5>Please choose your shipping method</h5>
    </div>
    <form action="#" class="shipping-options">
      <div class="shipping-options__item">
        <input type="radio" name="shipping-option" id="shipping-option-1" checked>
        <label for="shipping-option-1">
          <div>
            <h3>Standard</h3>
            <p class="desc">First Class untracked</p>
            <p class="estimated">Estimated delivery: <b>15-11 September</b></p>
          </div>
          <div>
            <span class="currency">$</span><span class="price">3.50</span>
          </div>
        </label>
      </div>
      <div class="shipping-options__item">
        <input type="radio" name="shipping-option" id="shipping-option-2">
        <label for="shipping-option-2">
          <div>
            <h3>Tracked</h3>
            <p class="desc">Priority Shipping with tracking ID</p>
            <p class="estimated">Estimated delivery: <b>15-11 September</b></p>
          </div>
          <div>
            <span class="currency">$</span><span class="price">12.00</span>
          </div>
        </label>
      </div>
      <div class="shipping-options__item">
        <input type="radio" name="shipping-option" id="shipping-option-3">
        <label for="shipping-option-3">
          <div>
            <h3>Standard</h3>
            <p class="desc">Fastest, tracked and insured</p>
            <p class="estimated">Estimated delivery: <b>15-11 September</b></p>
          </div>
          <div>
            <span class="currency">$</span><span class="price">25.00</span>
          </div>
        </label>
      </div>
    </form>
  </div>
  <div class="b-checkout">
    <div class="b-checkout__title">
      <h3>Shipping Address</h3>
    </div>
    <form action="#">
      <div class="ui grid">
        <div class="sixteen wide mobile eight wide tablet eight wide computer column">
          <label for="tab-2-firstname">First name<span class="required">*</span></label>
          <input type="text" id="tab-2-firstname">
        </div>
        <div class="sixteen wide mobile eight wide tablet eight wide computer column">
          <label for="tab-2-lastname">Last name<span class="required">*</span></label>
          <input type="text" id="tab-2-lastname">
        </div>
      </div>
      <a href="#" class="add-link">Add company name</a>
      <div>
        <label for="tab-2-streetaddress">Street address<span class="required">*</span></label>
        <input type="text" id="tab-2-streetaddress">
      </div>
      <div>
        <label for="tab-2-city">City<span class="required">*</span></label>
        <input type="text" id="tab-2-city">
      </div>
      <div>
        <label for="tab-2-postcode">Postcode<span class="required">*</span></label>
        <input type="text" id="tab-2-postcode">
      </div>
      <div>
        <label for="tab-2-country">Country<span class="required">*</span></label>
        <select type="text" id="tab-2-country">
          <option value="" selected disabled>Choose</option>
          <option value="">Country 1</option>
          <option value="">Country 2</option>
          <option value="">Country 3</option>
          <option value="">Country 4</option>
          <option value="">Country 5</option>
        </select>
      </div>
      <div>
        <label>
          <input type="checkbox">
          <span class="pseudo-checkbox">
            <i class="check icon"></i>
          </span>
          <span>Use different address for billing?</span>
        </label>
      </div>
    </form>
  </div>
  <div class="navigation-row">
    <a href="#" class="btn btn--checkout btn--checkout_grey">
      <i class="icon arrow left"></i> Back
    </a>
    <a href="#" class="btn btn--checkout">
      Next <i class="icon arrow right"></i>
    </a>
  </div>
</div>
