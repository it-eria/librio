{{#shoping-cart-item}}
<div class="shoping-cart-item" data-js="shoping-cart-item">
  <div class="ui grid">
    <div class="column two wide shoping-cart-item__image">
      <div class="flex-wrapper">
        <img src="{{{shoping-cart-item__image}}}" alt="image">      
      </div>
    </div>
    <div class="column four wide shoping-cart-item__about">
      <h4>{{shoping-cart-item__title}}</h4>
      {{#shoping-cart-item__hero}}
      <div class="shoping-cart-item__hero">
        <p>Hero: <b>{{shoping-cart-item__hero}}</b></p>
      </div>
      {{/shoping-cart-item__hero}}
      <p>Language: {{shoping-cart-item__lang}}</p>
      <p>Format: {{shoping-cart-item__format}}</p>
      <a href="#" class="btn btn--edit">
        <i class="pencil alternate icon"></i>Edit item
      </a>
    </div>
    <div class="column eight wide shoping-cart-item__price-generator">
      <form>
        <div class="ui four column grid">
          <div class="column">
            <h4>Unit Price</h4>
            <div class="price-generator__item unit-price" data-js="unit-price">
              <span class="currency">$</span><span class="value">32.00</span>
            </div>
          </div>
          <div class="column">
            <h4>Copies</h4>
            <div class="price-generator__item copies">
              <div class="count-ctrl">
                <input type="number" value="1" class="counter">
                <a href="#" class="ctrl-btn ctrl-btn--up" data-js="increment">
                  <i class="angle up icon"></i>
                </a>
                <a href="#" class="ctrl-btn ctrl-btn--down" data-js="decrement">
                  <i class="angle down icon"></i>
                </a>
              </div>
            </div>
          </div>
          <div class="column">
            <h4>Add giftwrap?</h4>
            <div class="price-generator__item giftwrap">
              <label>
                <input type="checkbox">
                <span class="pseudo-checkbox">
                  <i class="check icon"></i>
                </span>
                <span class="currency">$</span><span class="value">3.50</span>
              </label>
            </div>
          </div>
          <div class="column">
            <h4>Cost</h4>
            <div class="price-generator__item unit-price" data-js="cost">
              <span class="currency">$</span><span class="value">32.00</span>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="column two wide shoping-cart-item__remove">
      <div class="remove-btn-wrapper">
        <a href="#" class="btn btn--remove"><i class="x icon"></i></a>
      </div>
    </div>
  </div>
</div>
{{/shoping-cart-item}}