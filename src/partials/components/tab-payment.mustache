<div class="b-checkout tab-payment ui tab active" data-tab="payment-tab">
  <div class="b-checkout__title">
    <h3>Payment Options</h3>
    <h5>Please choose a payment option</h5>
  </div>
  <form action="#">
    <div class="ui accordion">
      <div class="title">
        Credit Card
        <i class="icon angle down"></i>
      </div>
      <div class="content">
        <div>
          <label for="tab-3-nameoncard">Name on card</label>
          <input type="text" id="tab-3-nameoncard">
        </div>
        <div>
          <label for="tab-3-cardnumber">Card number</label>
          <input type="text" id="tab-3-cardnumber">
        </div>
        <div class="ui grid">
          <div class="sixteen wide mobile eight wide tablet eight wide computer column">
            <label for="tab-3-date">Expiration date</label>
            <input type="text" id="tab-3-date" placeholder="MM/YY">
          </div>
          <div class="sixteen wide mobile eight wide tablet eight wide computer column">
            <label for="tab-3-cvv">CVV</label>
            <input type="text" id="tab-3-cvv">
          </div>
        </div>
        <div>
          <button type="submit" class="btn btn--checkout">Pay Now <i class="icon arrow right"></i></button>
        </div>
      </div>
      <div class="title">
        PayPal
        <i class="icon angle down"></i>
      </div>
      <div class="content">
        
      </div>
    </div>
  </form>
</div>